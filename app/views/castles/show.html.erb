<div class="container castle">
  <div class="card-trip">
      <div class="container image">
        <%= cl_image_tag(@castle.photo.key) %>
      </div>
      <div class="container">
        <h1><%= @castle.name %></h1>
      </div>
      <div class="container">
        <p><%= @castle.description %></p>
      </div>
  </div>

  <div class="back">
    <%= link_to 'book', new_castle_booking_path(@castle), class:'backlink'  %>
  </div>
</div>

<div class="container">
  <% @reviews.each do |review|  %>
    <p>Utilisateur anonyme | <%= review.comment %> - note : <%= review.rating %>/5</p>
  <% end %>
</div>

<div class="back">
    <%= link_to 'Back', castles_path, class: 'backlink' %>
</div>

<div class="back">
<%= link_to 'Update', edit_castle_path, class: 'backlink' %>
</div>

<div class="back">
<%= link_to 'Review', new_castle_review_path(@castle), class: 'backlink' %>
</div>
